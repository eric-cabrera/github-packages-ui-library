{
  "compilerOptions": {
    "composite": true,                          // Added: Enables incremental builds
    "target": "ES2022",                         // Keep as-is: Target modern ES version
    "lib": ["ES2023"],                          // Keep as-is: Uses the latest libraries
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",                 // Updated: Use Node.js style resolution
    "allowSyntheticDefaultImports": true,       // Added: Allows default imports without specifying default
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,                             // No output; useful for configs like this

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]                 // Keep: Include your Vite config
}
