{
  "compilerOptions": {
    "composite": true,                          // Enables incremental builds
    "target": "ESNext",                         // Keep as-is: Target modern ES version
    "lib": ["ESNext"],                          // Use the latest libraries
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",                 // Use Node.js style resolution
    "allowSyntheticDefaultImports": true,       // Allows default imports without specifying default
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,                             // No output; useful for configs like this

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]                 // Keep: Include your Vite config
}
