{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    
    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,
    "outDir": "dist",
    "declaration": true,                     // Ensure this is included
    "declarationDir": "./dist/types",       // Directory for generated declaration files
    "composite": true,                       // Enable composite projects
    "jsx": "preserve",                      // Support JSX for Vue components

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths */
    "paths": {
      "@/*": ["src/*"]
    },

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true              // Optional: skip type checking of default library files
  },
  "include": [
    "vite.config.*",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "vue-shim.d.ts"
  ]
}
